{% extends 'page/checkout/payment.html.twig' %}

{% block select_payment %}
    {% if oViewConf.isKlarnaPaymentsEnabled() and oView.loadKlarnaPaymentWidget %}
        {% if oView.getCheckedPaymentId() == paymentmethod.oxpayments__oxid.value|raw %}
            {% set is_checked = true %}
        {% else %}
            {% set is_checked = false %}
        {% endif %}

        {% if sPaymentID == "klarna" %}
            <div class="well well-sm kp-outer">
                <dl>
                    <dt>
                        <input class="kp-radio" id="kp-pl" data-payment_id="pay_later" type="radio" name="paymentid"
                               value="{{ sPaymentID }}"
                               {% if is_checked %}checked{% endif %}>
                        <label for="kp-pl"><b>{{ oView.removeKlarnaPrefix(paymentmethod.oxpayments__oxdesc.value|raw|raw) }}</b></label>
                        <img src="{{ paymentmethod.getBadgeUrl() }}">

                    </dt>
                    <dt style="font-weight: normal">{{ translate({ ident: "TCKLARNA_KP_SUBTITLE" }) }}</dt>
                    <dt>
                        {% if kpError %}
                            <div class="kp-method alert alert-info"
                                 style="{% if not is_checked %}display: none; {% endif %}max-width:700px">{{ kpError }}</div>
                        {% else %}
                            <div id="pay_later" class="kp-method" style="display: none;"></div>
                        {% endif %}
                    </dt>
                </dl>
            </div>
        {% else %}
            {{ parent() }}
        {% endif %}
    {% else %}
        {{ parent() }}
    {% endif %}

{% endblock %}

{% block change_payment %}
    {{ parent() }}

    {% if oViewConf.isKlarnaPaymentsEnabled() and oView.loadKlarnaPaymentWidget %}
        <div class="loading" style="display: none;">Loading&#8230;</div>
        <div class="kp-method alert alert-info tcklarna-message"
             style="display: none; max-width:700px">{{ translate({ ident: "KP_NOT_AVAILABLE_FOR_COMPANIES" }) }}</div>
        <script>
            var tcKlarnaClientToken = "{{ client_token }}";
            var tcKlarnaIsB2B = "{{ tcKlarnaIsB2B }}";
        </script>
        {{ script({ include: oViewConf.getModuleUrl('tcklarna', 'out/src/js/tcklarna_payments_handler.js'), dynamic: __oxid_include_dynamic }) }}
        {{ script({ include: "https://x.klarnacdn.net/kp/lib/v1/api.js", dynamic: __oxid_include_dynamic }) }}
        {{ style({ include: oViewConf.getModuleUrl('tcklarna', 'out/src/css/tcklarna_payments.css') }) }}
    {% endif %}
{% endblock %}